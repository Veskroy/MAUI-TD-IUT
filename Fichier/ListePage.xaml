<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fichier.ListePage"
             Title="Citations">
    <StackLayout Padding="10" Spacing="10">
        <ListView HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" x:Name="LstCitations" BackgroundColor="LightGray">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Texte}" Detail="{Binding Auteur}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Ajouter une citation" HorizontalOptions="FillAndExpand" x:Name="BtnAddCitation"/>
    </StackLayout>
</ContentPage>